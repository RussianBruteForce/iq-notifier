; IQ Notifier config
;
; 'enabled' is false by default everywhere

[ui]
; you can disable floating notifications
enabled = true

; set to 'left' if you want to show icon at left side
;icon_position = left

; spacing between notifications
spacing = 20
; margins between screen borders and notification area
global_margins = 0,20,20,0 

; you should set both width and height to see changes
;width = 400
;height = 100

; you should set both width and height to see changes
;extra_window_width = 400
;extra_window_height = 64

; if not set, IQ Notifier will try to automatically adjust status bar height
;bar_height = 24

; default value: 0 (invisible)
; fancy trick: make expiration_bar_height same as window height
expiration_bar_height = 2

; if not set, IQ Notifier will try to automatically adjust font size
;font_size = 12

; if not set, IQ Notifier will try to automatically adjust icon size
;icon_size = 72

;;;;;;;;;; modifiers ;;;;;;;;;;

[default_timeout]
; be careful disabling this modifire!
enabled = true
; 0 for default (3500)
default_timeout = 1000

; try to find app icon when title is same as application name
[title_to_icon]
enabled = true

[body_to_title_when_title_is_app_name]
enabled = true

[replace_minus_to_dash]
enabled = true
title = true
body = false